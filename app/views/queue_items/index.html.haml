%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = bootstrap_form_tag update_queue_path
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |item|
                %tr
                  = f.hidden_field "queue_items[][id]", item.id
                  %td
                    = f.text "queue_items[][position]", item.position
                  %td
                    = link_to item.video_title, item.video
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    = f.select :rating, "queue_items[][rating]", rating_options(item.rating), include_blank: true
                  %td
                    = link_to item.category_name, item.category
                  %td
                    = link_to item, method: :delete do
                      %i.glyphicon.glyphicon-remove
            = f.submit "Update Instant Queue", class: "btn btn-default"
          